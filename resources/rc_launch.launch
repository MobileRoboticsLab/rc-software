<launch>
    <!-- VESC -->
    <include file="$(find vesc_main)/launch/vesc.launch" />

    <!-- Lidar -->
    <include file="$(find ydlidar)/launch/lidar.launch" />

    <!-- SLAM -->
    <include file="$(find hector_mapping)/launch/mapping_default.launch">
        <!--arg name="map_size" value="2048"-->
    </include>

    <!-- Transforms -->
    <node pkg="tf" type="static_transform_publisher" name="base_to_laser_tf" args="0 0 0 0 0 0 1 base_footprint laser_frame 100"/>

</launch>